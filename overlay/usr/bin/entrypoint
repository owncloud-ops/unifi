#!/usr/bin/env sh
# shellcheck disable=SC2039
set -eo pipefail
source /usr/local/lib/log.sh

BASEDIR="/opt/app/unifi"
DATADIR=${BASEDIR}/data
LOGDIR=${BASEDIR}/logs
RUNDIR=${BASEDIR}/run

filename=${DATADIR}/system.properties

set_conf_value() {
thekey="$1"
newvalue="$2"
if ! grep -R "^[#]*\s*${thekey}=.*" $filename > /dev/null; then
  echo "APPENDING because '${thekey}' not found"
  echo "$thekey=$newvalue" >> $filename
else
  echo "SETTING because '${thekey}' found already"
  sed -ir "s,^[#]*\s*${thekey}=.*,$thekey=$newvalue," $filename
fi
}

MONGOURL="mongodb://${UNIFI_DB_USER}:${UNIFI_DB_PASSWORD}@${UNIFI_DB_HOST}:${UNIFI_DB_PORT}/${UNIFI_DB_NAME}?authSource=admin"
MONGOSTATURL="mongodb://${UNIFI_DB_USER}:${UNIFI_DB_PASSWORD}@${UNIFI_DB_HOST}:${UNIFI_DB_PORT}/${UNIFI_DB_NAME}_stat?authSource=admin"

if [ -f "${DATADIR}/system.properties" ]; then
  set_conf_value "unifi.logStdout" "true"
  set_conf_value "unifi.config.readEnv" "false"
  set_conf_value "db.mongo.local" "false"
  set_conf_value "db.mongo.uri" "$MONGOURL"
  set_conf_value "statdb.mongo.uri" "$MONGOSTATURL"
  set_conf_value "unifi.db.name" "$UNIFI_DB_NAME"
else
  cp /etc/templates/system.properties.tmpl ${DATADIR}/system.properties  
  set_conf_value "unifi.logStdout" "true"
  set_conf_value "unifi.config.readEnv" "false"
  set_conf_value "db.mongo.local" "false"
  set_conf_value "db.mongo.uri" "$MONGOURL"
  set_conf_value "statdb.mongo.uri" "$MONGOSTATURL"
  set_conf_value "unifi.db.name" "$UNIFI_DB_NAME"
fi

[ ! -z "${UNIFI_JVM_MAX_HEAP_SIZE}" ] && UNIFI_JVM_EXTRA_OPTS="${UNIFI_JVM_EXTRA_OPTS} -Xmx${UNIFI_JVM_MAX_HEAP_SIZE}"
[ ! -z "${UNIFI_JVM_INIT_HEAP_SIZE}" ] && UNIFI_JVM_EXTRA_OPTS="${UNIFI_JVM_EXTRA_OPTS} -Xms${UNIFI_JVM_INIT_HEAP_SIZE}"

UNIFI_JVM_EXTRA_OPTS="${UNIFI_JVM_EXTRA_OPTS} -Dunifi.datadir=${DATADIR} -Dunifi.logdir=${LOGDIR} -Dunifi.rundir=${RUNDIR}"
JVM_OPTS="${UNIFI_JVM_EXTRA_OPTS} -Djava.awt.headless=true -Dfile.encoding=UTF-8"

if [ -n "$UNIFI_DB_HOST" ]
then
    log_info "Wait for mongoDB server on '${UNIFI_DB_HOST}:${UNIFI_DB_PORT:-27017}'"
    /usr/local/bin/wait-for "${UNIFI_DB_HOST}":"${UNIFI_DB_PORT:-27017}"
else
    log_error "Required environment variable '\$UNIFI_DB_HOST' not set"
    exit 1
fi

log_info "Start Unifi Controller\n"
exec /usr/bin/java ${JVM_OPTS} -jar ${BASEDIR}/lib/ace.jar start
